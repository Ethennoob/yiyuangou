namespace AppMain\controller\Admin;
use \System\BaseClass;

class SystemController extends BaseClass {
    /**
     * 设置认购上限(百分数)
     */
    public function buyLimitEdit()
        {  
            $rule = [
                    'buy_limit'      =>['egNum'],
                ];
                $this->V($rule); 

                foreach ($rule as $k => $v) {
                        $data[$k] = $_POST[$k];
                }

            $data['update_time'] = time();

                $goods = $this->table('system')->update($data);
                if(!$goods){
                    $this->R('',40001);
                }
            $this->R(); 
        }
}